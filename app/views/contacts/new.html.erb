<div class="container">
  <div class="row">
    <div class="col-lg-6 offset-lg-3">
      <div class="card card-outline-secondary">
        <div class="card-block">
          <blockquote class="card-blockquote">
            <h2 class="text-center">New Contact</h2>
            <%= form_for :contact, url: contacts_path do |f| %>
              <div class="form-group">
                <%= f.label :name %>:<br>
                <%= f.text_field :name, class: 'form-control' %>
              </div>

              <div  class="form-group">
                <%= f.label :address %>:<br>
                <%= f.text_field :address, class: 'form-control' %>
              </div>

              <div  class="form-group">
                <%= f.label :email %>:<br>
                <%= f.text_field :email, type: 'email', class: 'form-control' %>
              </div>

              <div  class="form-group">
                <%= f.label :phone %>:<br>
                <%= f.text_field :phone, type: 'number', class: 'form-control' %>
              </div>

              <footer class="text-center">
                <%= f.submit 'Submit', class: 'btn btn-outline-primary my-2 my-sm-0' %>
              </footer>
            <% end %>
          </blockquote>
        </div>
      </div>
    </div>
  </div>
</div>
