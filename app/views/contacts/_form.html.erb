<%= form_for :contact, url: contacts_path do |f| %>
  <% if @contact.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h2>
        <%= pluralize(@contact.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @contact.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div  class="form-group">
    <%= f.label :address %><br>
    <%= f.text_field :address, class: 'form-control' %>
  </div>

  <div  class="form-group">
    <%= f.label :email %><br>
    <%= f.text_field :email, type: 'email', class: 'form-control' %>
  </div>

  <div  class="form-group">
    <%= f.label :phone %><br>
    <%= f.text_field :phone, type: 'number', class: 'form-control' %>
  </div>

  <footer class="text-center">
    <%= f.submit 'Submit', class: 'btn btn-outline-primary my-2 my-sm-0' %>
    <%= link_to 'Cancel', contacts_path, class: 'btn btn-outline-danger my-2 my-sm-0' %>
  </footer>
<% end %>
